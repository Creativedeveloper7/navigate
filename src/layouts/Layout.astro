---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Navigating Adolescence - A comprehensive guide for teens, parents, and educators" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content={description} />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>{title} | Navigating Adolescence</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <Navigation />
    <main>
      <slot />
    </main>
    
    <!-- About the Author Section -->
    <div class="bg-gray-100 p-6 rounded-lg shadow-lg text-center max-w-3xl mx-auto my-12">
      <img src="/author.jpg" alt="Author" class="w-24 h-24 mx-auto rounded-full mb-4" />
      <h2 class="text-2xl font-bold text-gray-800">John Doe</h2>
      <p class="text-gray-600 text-sm mt-2">John Doe is a renowned educator and author dedicated to helping young people navigate adolescence with confidence. With over 15 years of experience in youth mentorship, his work provides practical guidance for teens, parents, and educators.</p>
    </div>
    
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --primary-color: #2B7BA9;
    --secondary-color: #E85C33;
  }
  html {
    font-family: 'Inter', system-ui, sans-serif;
  }
  body {
    margin: 0;
    padding: 0;
  }
</style>
